<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gameInfoItem"
    android:layout_width="match_parent"

    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@drawable/rounded_corner_list"
    android:elevation="10dp"
    android:orientation="horizontal"
    android:paddingStart="0dp">

    <ImageView
        android:id="@+id/gameInfoCover"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_weight="0"
        android:elevation="5dp"
        android:scaleType="fitXY"
        tools:srcCompat="@tools:sample/avatars" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/gameInfoName"
            android:layout_width="245dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/montserratregular"
            android:text="TextView"
            android:textColor="#FFFFFF"
            android:textSize="10pt" />

        <TextView
            android:id="@+id/gameInfoRelease"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/montserratregular"
            android:text="TextView"
            android:textColor="@color/app_select"
            android:textSize="6pt" />

        <TextView
            android:id="@+id/gameInfoRating"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/montserratregular"
            android:text="TextView"
            android:textColor="@color/app_select"
            android:textSize="6pt" />

    </LinearLayout>

</LinearLayout>