<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_color"
    android:elevation="5dp"
    tools:context=".PublicGameDetailPage">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/publicGameCover"
                    android:layout_width="match_parent"
                    android:layout_height="271dp"
                    tools:src="@tools:sample/avatars" />

                <TextView
                    android:id="@+id/publicGameTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserratsemibold"
                    android:text="@string/sample"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="13pt" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/montserratregular"
                    android:text="Game Description"
                    android:textColor="#FFFFFF"
                    android:textSize="12pt" />

                <TextView
                    android:id="@+id/publicGameDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserratregular"
                    android:text="@string/sample"
                    android:textColor="#FFFFFF"
                    android:textSize="8pt" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/montserratregular"
                    android:text="Release Date"
                    android:textColor="#FFFFFF"
                    android:textSize="12pt" />
                <TextView
                    android:id="@+id/publicGameReleaseDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserratregular"
                    android:text="@string/sample"
                    android:textColor="@color/app_select"
                    android:textSize="8pt" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserratregular"
                    android:layout_marginTop="30dp"
                    android:text="Platforms"
                    android:textColor="#FFFFFF"
                    android:textSize="12pt" />
                <TextView
                    android:id="@+id/publicGamePlatforms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserratregular"
                    android:text="@string/sample"
                    android:textColor="@color/app_select"
                    android:textSize="8pt" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="30dp"
                    android:background="#111111"
                    android:elevation="10dp"
                    android:orientation="vertical"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserratregular"
                        android:text="Critic Rating"
                        android:textAlignment="center"
                        android:textColor="#FFFFFF"
                        android:textSize="12pt" />

                    <TextView
                        android:id="@+id/publicGameRating"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserratregular"
                        android:text="0/100"
                        android:textAlignment="center"
                        android:textColor="@color/app_select"
                        android:textSize="10pt" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/montserratregular"
                    android:text="Have you finished or in the middle of playing this game?"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="12pt" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserratregular"
                    android:text="If you've finished or are in the middle of playing this game, add this game to your journal to keep track of it and leave your review on it."
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="8pt" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="40dp">

                    <Button
                        android:id="@+id/addGameBtn"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/app_select"
                        android:text="Add Game To Your Journal"
                        android:textAlignment="center"
                        android:elevation="10dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>